{
  "name": "@hyperse/next-auth",
  "version": "1.1.1",
  "homepage": "https://github.com/hyperse-io/next-auth",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperse-io/next-auth",
    "directory": "packages/next-auth"
  },
  "license": "MIT",
  "author": {
    "name": "Hyperse",
    "url": "https://github.com/hyperse-io"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./dist/index.d.ts"
    },
    "./providers": {
      "import": "./providers/index.js",
      "types": "./dist/providers/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "bin/",
    "dist/",
    "index.js",
    "README.md",
    "CHANGELOG.md",
    "package.json"
  ],
  "scripts": {
    "generate": "prisma generate --schema=./src/adapters/prisma/lucia.prisma && node copyPrisma.js",
    "build": "yarn generate && rimraf dist && tsc -p ./tsconfig.build.json",
    "?build-release": "When https://github.com/atlassian/changesets/issues/432 has a solution we can remove this trick",
    "build-release": "yarn build && rimraf ./_release && yarn pack && mkdir ./_release && tar zxvf ./package.tgz --directory ./_release && rm ./package.tgz",
    "clean": "rimraf --no-glob ./dist ./_release ./coverage ./tsconfig.tsbuildinfo",
    "lint": "eslint .",
    "test": "run-s test-unit",
    "test-unit": "vitest run",
    "test-coverage": "vitest run --coverage",
    "test-unit-watch": "vitest watch --ui",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "dependencies": {
    "arctic": "1.9.2",
    "oslo": "1.2.1"
  },
  "devDependencies": {
    "@hyperse/eslint-config-hyperse": "^1.1.3",
    "@prisma/client": "^5.19.1",
    "@types/node": "22.5.5",
    "eslint": "^9.10.0",
    "next": "^14.2.11",
    "npm-run-all": "4.1.5",
    "prisma": "^5.19.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "rimraf": "6.0.1",
    "typescript": "5.6.2",
    "vite-tsconfig-paths": "5.0.1",
    "vitest": "2.1.1"
  },
  "peerDependencies": {
    "@prisma/client": "^5.19.1",
    "next": "^14.2.11"
  },
  "peerDependenciesMeta": {
    "@prisma/client": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "directory": "_release/package"
  }
}
