{
  "name": "@hyperse-io/next-demo",
  "version": "1.0.2",
  "private": true,
  "type": "module",
  "scripts": {
    "generate": "prisma generate",
    "prisma-studio": "prisma studio",
    "db-seed": "prisma db seed",
    "db-reset": "prisma migrate dev reset",
    "dx:next": "run-s migrate-dev db-seed && next dev",
    "dx:prisma-studio": "yarn prisma-studio",
    "dx": "run-p dx:* --print-label",
    "dev": "yarn dx:next",
    "prebuild": "run-s generate migrate",
    "build": "next build",
    "start": "next start",
    "migrate-dev": "prisma migrate dev",
    "migrate": "prisma migrate deploy",
    "test": "yarn test-unit && yarn test-e2e",
    "test-unit": "vitest run",
    "test-e2e": "playwright test",
    "test-dev": "start-server-and-test dev http://127.0.0.1:3000 test",
    "test-start": "start-server-and-test start http://127.0.0.1:3000 test",
    "postinstall": "yarn generate",
    "check-dist": "es-check -v",
    "clean": "rimraf --no-glob ./dist ./_release ./coverage ./tsconfig.tsbuildinfo",
    "check-size": "size-limit --highlight-less",
    "typecheck": "tsc --project ./tsconfig.json --noEmit",
    "fix-all-files": "eslint . --ext .ts,.tsx,.js,.jsx,.cjs,.mjs,.mdx,.graphql --fix",
    "next-lint": "next lint",
    "lint": "eslint --cache --ext \".js,.ts,.tsx\" --report-unused-disable-directives --report-unused-disable-directives src"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@hookform/resolvers": "3.3.2",
    "@hyperse-io/next-auth": "workspace:*",
    "@hyperse-io/next-trpc": "workspace:*",
    "@lucia-auth/adapter-prisma": "^3.0.2",
    "@next/bundle-analyzer": "14.0.3",
    "@prisma/client": "^5.6.0",
    "@tanstack/query-core": "^4.x",
    "@tanstack/react-query": "^4.x",
    "@trpc/client": "^10.44.1",
    "@trpc/next": "^10.44.1",
    "@trpc/react-query": "^10.44.1",
    "@trpc/server": "^10.44.1",
    "class-variance-authority": "0.7.0",
    "clsx": "^2.0.0",
    "lucia": "^2.7.4",
    "next": "^14.0.3",
    "next-intl": "^3.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "7.48.2",
    "server-only": "0.0.1",
    "tailwind-merge": "^2.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@armit/eslint-config-bases": "0.1.0",
    "@changesets/cli": "2.27.1",
    "@commitlint/cli": "18.4.3",
    "@commitlint/config-conventional": "18.4.3",
    "@playwright/test": "^1.40.1",
    "@types/node": "^20.10.1",
    "@types/prettier": "2.7.3",
    "@types/react": "^18.2.39",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "autoprefixer": "^10.4.16",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "^16.3.1",
    "es-check": "7.1.1",
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.0.3",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-tailwindcss": "3.13.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "prettier": "^3.1.0",
    "prisma": "^5.6.0",
    "size-limit": "11.0.0",
    "start-server-and-test": "^2.0.3",
    "tailwindcss": "^3.3.5",
    "tsx": "^4.6.1",
    "typescript": "^5.3.2",
    "vite": "^5.0.4",
    "vite-tsconfig-paths": "4.2.1",
    "vitest": "^0.34.6"
  },
  "engines": {
    "node": ">=16.8"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "packageManager": "yarn@1.22.19",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
